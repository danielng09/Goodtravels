<!DOCTYPE html>
<html>

<head>
  <title>Goodtravels</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>

  <script>
    <% if current_user %>
      window.CURRENT_USER_ID = <%= current_user.id %>;
    <% end %>
  </script>

<body>
  <nav id='nav'>
    <%= render partial: "layouts/header" %>
  </nav>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

  <%= yield %>
</body>

</html>
