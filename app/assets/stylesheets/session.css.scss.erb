button#guest-login {
  margin-left: 20px;
}

.log-background {
  position: relative;
  background-image: url("<%= asset_path('log_background.jpg') %>");
  background-position: center;
  height: 100vh;
}

.log-form {
  width: 316px;
  height: 290px;
  position: absolute;
  top: 35%;
  left: 52%;
  margin: -70px 0 0 -170px;
  background-color: rgba(255, 255, 255, .7);
  padding: 5px 10px 5px 10px;
  color: black;
  box-shadow: 0 1px 3px #626262;
}

.log-form input {
  background-color: rgba(255, 255, 255, .5);
  border: 1px solid black;
  color: black;
}

.log-form > h1 {
  font-size: 36px;
  margin-top: 15px;
  text-align: center;
}

.glyphicon-log-in {
  margin-left: 10px;
}
