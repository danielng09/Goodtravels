button#guest-login {
  margin-left: 20px;
}

.log-background {
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  position: fixed;
  background-image: url("<%= asset_path('log_background.jpg') %>");
  background-position: center;
}

.log-form {
  background-color: rgba(255, 255, 255, .4);
  width: 316px;
  margin-top: 10%;
  margin-left: 38%;
  padding: 5px 10px 5px 10px;
  height: 300px;
  color: black;
}

.log-form input {
  background-color: rgba(255, 255, 255, .5);
  border: 1px solid black;
  color: black;
}

.log-form > h1 {
  font-size: 36px;
  margin-top: 15px;
  text-align: center;
}
